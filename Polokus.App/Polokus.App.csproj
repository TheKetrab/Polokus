<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net6.0-windows</TargetFramework>
		<Nullable>enable</Nullable>
		<UseWindowsForms>true</UseWindowsForms>
		<ImplicitUsings>enable</ImplicitUsings>
		<Platforms>x64</Platforms>
		<CefSharpAnyCpuSupport>true</CefSharpAnyCpuSupport>
		<ApplicationIcon>Resources\Polokus.ico</ApplicationIcon>
        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
	</PropertyGroup>

	<PropertyGroup Condition="'$(PlatformTarget)' == 'x64'">
		<RuntimeIdentifier>win-x64</RuntimeIdentifier>
	</PropertyGroup>

	<PropertyGroup Condition="'$(PlatformTarget)' == 'x86'">
		<RuntimeIdentifier>win-x86</RuntimeIdentifier>
	</PropertyGroup>

	<ItemGroup>
    <None Remove="Communication\Protos\hooks.proto" />
    <None Remove="Fonts\segmdl2.ttf" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Resources\PolokusIco.ico" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Fonts\segmdl2.ttf" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="CefSharp.WinForms.NETCore" Version="111.2.20" />
    <PackageReference Include="Google.Protobuf" Version="3.21.12" />
    <PackageReference Include="Grpc.Net.Client" Version="2.50.0" />
    <PackageReference Include="Grpc.Tools" Version="2.51.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Svg" Version="3.4.4" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Polokus.Core.Interfaces\Polokus.Core.Interfaces.csproj" />
    <ProjectReference Include="..\Polokus.Core\Polokus.Core.csproj" />
    <ProjectReference Include="..\Polokus.ExternalsExample\Polokus.ExternalsExample.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="Forms\UserTaskDialog.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Forms\ErrorDialog.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>
	<ItemGroup>
		<Protobuf Include="Communication\Protos\common.proto" GrpcServices="Client" />
		<Protobuf Include="Communication\Protos\hooks.proto" GrpcServices="Client" />
		<Protobuf Include="Communication\Protos\logs.proto" GrpcServices="Client" />
		<Protobuf Include="Communication\Protos\polokus.proto" GrpcServices="Client" />
		<Protobuf Include="Communication\Protos\processinstances.proto" GrpcServices="Client" />
		<Protobuf Include="Communication\Protos\workflows.proto" GrpcServices="Client" />
	</ItemGroup>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="echo Updating editor view:&#xD;&#xA;echo xcopy src: &quot;$(SolutionDir)Polokus.Bpmnio\public&quot;&#xD;&#xA;echo       dst: &quot;$(ProjectDir)$(OutDir)editor&quot;&#xD;&#xA;echo       flg: /E/I/Y&#xD;&#xA;xcopy &quot;$(SolutionDir)Polokus.Bpmnio\public&quot; &quot;$(ProjectDir)$(OutDir)editor&quot; /E/I/Y&#xD;&#xA;&#xD;&#xA;if not exist &quot;$(ProjectDir)$(OutDir)config.ini&quot; (&#xD;&#xA;   echo Creating a default config file:&#xD;&#xA;   echo copy src: &quot;$(SolutionDir)Examples\DefaultConfig.ini&quot;&#xD;&#xA;   echo      dst: &quot;$(ProjectDir)$(OutDir)config.ini&quot;&#xD;&#xA;&#xD;&#xA;   copy &quot;$(SolutionDir)Examples\DefaultConfig.ini&quot; &quot;$(ProjectDir)$(OutDir)config.ini&quot;&#xD;&#xA;)&#xD;&#xA;&#xD;&#xA;if not exist &quot;$(ProjectDir)$(OutDir)externals.json&quot; (&#xD;&#xA;   echo Creating a default externals file:&#xD;&#xA;   echo copy src: &quot;$(SolutionDir)Examples\DefaultExternals.json&quot;&#xD;&#xA;   echo      dst: &quot;$(ProjectDir)$(OutDir)externals.json&quot;&#xD;&#xA;   copy &quot;$(SolutionDir)Examples\DefaultExternals.json&quot; &quot;$(ProjectDir)$(OutDir)externals.json&quot;&#xD;&#xA;)&#xD;&#xA;" />
	<Exec Command="copy &quot;$(ProjectDir)Resources\Polokus.ico&quot; &quot;$(ProjectDir)$(OutDir)Polokus.ico&quot; /y" />
  </Target>

</Project>